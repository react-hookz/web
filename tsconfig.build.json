{
  "extends": "./tsconfig.json",
  "include": [
    "src/index.ts",
    "src/*/*.ts"
  ],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./cjs",
    "declaration": true,
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "sourceMap": false,
    "plugins": [
      {
        "transform": "./utility/ts-transformer-js-extension.ts",
        "after": true
      }
    ]
  }
}
