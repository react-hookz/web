{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/__tests__/**",
    "src/**/__docs__/**"
  ],
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": false,
    "plugins": [
      {
        "transform": "./utility/ts-transformer-js-extension.ts",
        "after": true
      }
    ]
  }
}
