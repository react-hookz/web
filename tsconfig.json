{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"lib": [
			"ESNext",
			"DOM"
		],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"declaration": true,
		"removeComments": true,
		"newLine": "lf",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"rootDir": "./src"
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/__tests__/**",
		"src/**/__docs__/**"
	],
	"ts-node": {
		"esm": true,
		"swc": true
	}
}
