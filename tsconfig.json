{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "cjs",
    "esm",
    "esnext",
    "coverage",
    "storybook-build"
  ],
  "include": [
    "**.js",
    "**.ts",
    "**.md",
    ".storybook/*.js",
    "src/**/*.js",
    "src/**/*.ts",
    "tests/**/*.js",
    "tests/**/*.ts",
    "stories/**/*.tsx"
  ]
}
